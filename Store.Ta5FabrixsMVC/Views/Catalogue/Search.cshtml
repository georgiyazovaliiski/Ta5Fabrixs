@model List<Store.Model.Models.Product>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 text-left">Home / Search</div>
        <div class="col-md-6 text-right">
            Sort by:
            <select style="width:100%; max-width:100px" class="option-input">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
            </select>
        </div>
    </div>
</div>
<div class="container">
    <br>
    <div class="row">
        <div class="col-md-12">
            Search Results
        </div>
        <div class="col-md-12 text-center">
            <img style="width:85%; height:250px; margin:auto" src="~/Content/Images/FrontImages/NewReleases.jpg" />
        </div>
    </div>
</div>
<div class="container">
    <br>
    <br>
    <br>
    <br>@{ var notfound = "notfound.jpg"; }

    <div class="row">
        @if (Model.Count > 0)
        {
            foreach (var p in Model)
            {
                <div class="col-md-3">
                    <a href="@Url.Action("Item", "Catalogue", new { id = p.Id })">
                        <img style="width:100%; height:210px; margin:auto" src="~/Content/Images/ProductImages/@if (p.Images.Count > 0) { @p.Images[0].UrlName } else { @notfound }" />
                    </a>
                    <a href="@Url.Action("Item", "Catalogue", new { id = p.Id })">
                        <h3>@p.Name</h3>
                    </a>
                    <!-- CHECK IF SOLD OUT LATER -->
                    <!--<p>Sold Out</p> -->
                    <p>
                        <span class="money currency">@p.PriceEU &#8364;</span> @if (p.PriceEU != p.OriginalPriceEU)
                        {<strike><span class="currency">@p.OriginalPriceEU &#8364;</span></strike>}
                    </p>
                    <!--CHECK IF ON SALE-->


                    @if (p.PriceEU != p.OriginalPriceEU)
                    {
                        <div class="sale">
                            SALE
                        </div>
                    }


                </div>
            }
        }
        else
        {
            <span>No new items! :/</span>
        }
    </div>
</div>

